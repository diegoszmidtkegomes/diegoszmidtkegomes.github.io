<core:FragmentDefinition
  xmlns:core="sap.ui.core"
  xmlns="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:u="sap.ui.unified"
  xmlns:m="sap.m"
  xmlns:l="sap.ui.layout">
  <m:VBox>
    <m:MessageStrip
      text="{i18n>purcOrderView}"
      showIcon="true"
      showCloseButton="true"
      class="sapUiMediumMarginBottom" />
    <Table
      alternateRowColors="true"
      enableBusyIndicator="true"
	  selectionMode="None"
      rows="{Main>/zclAribaPurchaseOrder}"
      visibleRowCount="7">
      <columns>
        <Column
          width="9rem"
          filterProperty="Name">
          <m:Label text="Req. Ariba" />
          <template>
            <m:Link
              text="{Main>line/businessDocument}"
              href="{Main>line/businessDocumentUrl}"
              target="_blank" />
          </template>
        </Column>
        <Column
          width="6rem"
          sortProperty="line/entryDate">
          <m:Label text="{i18n>date}" />
          <template>
            <m:Text
              text="{
                path: 'Main>line/entryDate',
                type: 'sap.ui.model.type.Date',
                formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
              }"
              wrapping="false" />
          </template>
        </Column>
        <Column width="24rem">
          <m:Label text="PI" />
          <template>
            <m:Link
              text="{= ${Main>line/sourceId}.substr(0,36) }"
              href="{Main>line/sourceUrl}"
              target="_blank" />
          </template>
        </Column>
        <Column width="7rem">
          <m:Label text="PI status" />
          <template>
            <m:Text
              text="{Main>line/sourceStatusText}"
              wrapping="false" />
          </template>
        </Column>
        <Column width="9rem">
          <m:Label text="RFC" />
          <template>
            <m:Text
              text="{Main>line/targetId}" />
          </template>
        </Column>
        <Column width="7rem">
          <m:Label text="RFC status" />
          <template>
            <m:Text
              text="{Main>line/targetStatusText}"
              wrapping="false" />
          </template>
        </Column>
      </columns>
    </Table>
  </m:VBox>
</core:FragmentDefinition>