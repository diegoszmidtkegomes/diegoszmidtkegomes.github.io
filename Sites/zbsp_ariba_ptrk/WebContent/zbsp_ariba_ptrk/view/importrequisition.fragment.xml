<core:FragmentDefinition
  xmlns:core="sap.ui.core"
  xmlns="sap.ui.table"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:u="sap.ui.unified"
  xmlns:m="sap.m"
  xmlns:l="sap.ui.layout">
  <m:VBox>
    <m:MessageStrip
      text="{i18n>importreqView}"
      showIcon="true"
      showCloseButton="true"
      class="sapUiMediumMarginBottom" />
    <Table
      alternateRowColors="true"
      enableBusyIndicator="true"
	  selectionMode="None"
      rows="{BuyingPr>/record/erpRequisition}"
      visibleRowCount="7">
      <columns>
        <Column
          width="9rem"
          filterProperty="banfn"
          sortProperty="banfn">
          <m:Label text="Req. ECC" />
          <template>
            <m:Link
              text="{BuyingPr>banfn}"
              href="{BuyingPr>banfn}"
              target="_blank" />
          </template>
        </Column>
        <Column
          width="6rem"
          sortProperty="dateTime">
          <m:Label text="{i18n>date}" />
          <template>
            <m:Text
              text="{
                path: 'BuyingPr>dateTime',
                type: 'sap.ui.model.type.Date',
                formatOptions: {source: {pattern: 'yyyyMMddHHmmss'}, style: 'short'}
              }"
              wrapping="false" />
          </template>
        </Column>
        <!--<Column
          width="12rem"
          filterProperty="isSuccessful"
          sortProperty="isSuccessful">
          <m:Label text="{i18n>send}" />
          <template>
            <m:Text text="{= ${BuyingPr>isSuccessful} == true ? 'Sim' : 'NÃ£o' }" />
          </template>
        </Column>-->
        <Column
          width="40rem"
          filterProperty="msg"
          sortProperty="msg">
          <m:Label text="Message" />
          <template>
            <m:Text text="{BuyingPr>msg}" />
          </template>
        </Column>
      </columns>
    </Table>
  </m:VBox>
</core:FragmentDefinition>